<idea-plugin version="2">
    <name>YiiStorm</name>
    <description><![CDATA[
        <p>Yii framework integration for PhpStorm.</p>
        <br/>
        <b>Provides:</b>
        <ul>
        <li>CController::render() call references to view file (renderPartial supported).</li>
        <li>CAction $this->getController()->render('view') references to CController::render() wich use what CAction (renderPartial supported).</li>
        <li>CController::widget('path.to.widget') references to Widget class in current basepath.</li>
        <li>References to related AR Class in CActiveRecord::relations() (support namespaces).</li>
        <li>Migrations manager.</li>
        <li>Controller::render() views names autocompleter.</li>
        <li>Controller::render() views autocreator with variables phpdoc.</li>
        </ul>
    ]]></description>
    <version>0.9.1b</version>
    <vendor url="http://mazx.ru/" email="mazx@ya.ru">mazx.ru</vendor>
    <idea-version since-build="8000"/>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
        <!-- Add your project components here -->
        <component>
            <implementation-class>com.yiistorm.YiiStormProjectComponent</implementation-class>
        </component>
    </project-components>

    <actions>
        <!-- Add your actions here -->
        <!--action id="YiiStormConfigAction" class="com.yiistorm.actions.YiiStormConfigAction" text="YiiStorm config"
                description="YiiStorm config">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt Y"/>
        </action-->
    </actions>

    <depends>com.jetbrains.php</depends>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <psi.referenceContributor implementation="com.yiistorm.MyPsiReferenceContributor"/>
        <projectConfigurable implementation="com.yiistorm.YiiStormSettingsPage"></projectConfigurable>
        <toolWindow id="Migrations" secondary="true" icon="/com/yiistorm/images/migrations.png" anchor="bottom"
                    conditionClass="com.yiistorm.helpers.MigrationsCondition"
                    factoryClass="com.yiistorm.elements.MigrationsToolWindow"/>

        <completion.contributor language="PHP"
                                implementationClass="com.yiistorm.completition.ViewCompletionContributor"/>
    </extensions>
</idea-plugin>